<div class="login fs-3 card p-2">
  <h1 class="p-2">Atualizar {{car.model}}</h1>
  <form action="/edit" method="POST">
    <input type="text" name="id" value="{{car.id}}" />
    <div class="mb-3">
      <label for="nome" class="label label-info">Nome</label>
      <input
        type="text"
        name="nome"
        class="form-control me-2"
        value="{{car.nome}}"
      />
    </div>
    <div class="mb-3">
      <label for="modelo" class="label label-info">Modelo</label>
      <input
        type="text"
        name="modelo"
        class="form-control me-2"
        value="{{car.modelo}}"
      />
    </div>
    <div class="mb-3">
      <label for="motor" class="label label-info">Motor</label>
      <input
        type="text"
        name="motor"
        class="form-control me-2"
        value="{{car.motor}}"
      />
    </div>
    <div class="mb-3">
      <label for="ano" class="label label-info">Ano</label>
      <input
        type="number"
        name="ano"
        class="form-control me-2"
        value="{{car.ano}}"
      />
    </div>
    <div class="mb-3">
      <label for="fabricante" class="label label-info">Fabricante</label>
      <input
        type="text"
        name="fabricante"
        class="form-control me-2"
        value="{{car.fabricante}}"
      />
    </div>
    <div class="mb-3">
      <label for="valor" class="label label-info">Valor</label>
      <input
        type="number"
        name="valor"
        class="form-control me-2"
        value="{{car.valor}}"
      />
    </div>
    <div class="mb-3">
      <label for="cor" class="label label-info">Cor</label>
      <input
        type="text"
        name="cor"
        class="form-control me-2"
        value="{{car.cor}}"
      />
    </div>


    <input type="submit" value="Atualizar" class="btn btn-primary" />
  </form>
</div>
